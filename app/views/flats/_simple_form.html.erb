<div class="container">
  <% if @flat.name.nil? %>
    <h3>Add a new flat</h3>
  <% else %>
    <h3>Update your <%= @flat.name %></h3>
  <% end %>
    <%= simple_form_for [@flat] do |f| %>
        <%= f.input :name, input_html: {class: "input-from-new"} %>
        <%= f.input :description, input_html: {class: "input-from-new"} %>
        <%#= f.input :photo, input_html: {class: "input-from-new"} %>
        <%= f.input :photo, input_html: {class: "input-from-new"} %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.input :price, input_html: {class: "input-from-new"} %>
        <%= f.input :address, input_html: {class: "input-from-new", id: "flat_address"} %>
        <%= f.input :location, input_html: {class: "input-from-new"} %>
        <%= f.input :capacity, input_html: {class: "input-from-new"} %>
        <%= f.submit "save", class: "btn btn-primary" %>
    <% end %>
    <%= link_to 'Back to flats', flats_path %>
</div>
