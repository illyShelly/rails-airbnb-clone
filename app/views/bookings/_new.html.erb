<%= simple_form_for [@flat, @booking] do |f| %>
  <%= f.input :checkin, input_html: {class: ""}%>
  <%= f.input :checkout, input_html: {class: ""} %>
  <%= f.input :guests, collection: 1..@flat.capacity, default: 1, input_html: {class: ""} %>
  <%= f.submit "Book the flat", class: "btn btn-primary" %>
<% end %>

